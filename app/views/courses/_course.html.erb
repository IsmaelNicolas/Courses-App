<%= link_to course, id: dom_id(course), class: 'course flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w-xl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700' do %>
  <%= image_tag course.image, class: "object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-s-lg", alt: 'image' if course.image.attached? %>
  <div class="flex flex-col justify-between p-4 leading-normal">
    <h1 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white title"> <%= course.title %></h1>
    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400 description"><%= course.description %></p>
  </div>
<% end %>
