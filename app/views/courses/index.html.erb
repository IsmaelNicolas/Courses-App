<p style="color: green"><%= notice %></p>
<h1>Courses</h1>
<div id="courses">
  <% @courses.each do |course| %>
    <div class="course my-2">
      <%= render course %>
      <p>
        <%= link_to "Ver este curso", course ,class:"text-blue-600"%>
      </p>
    </div>
  <% end %>
</div>
<%= link_to "Nuevo curso", new_course_path, class:"text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
